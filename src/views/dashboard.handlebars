<div class="row d-flex justify-content-center">
  <div class="col-12">
    <h1>Welcome back {{fullname}}!</h1>
  </div>
</div>

<hr />

<div class="row d-flex justify-content-center mt-5">
  <div class="col-12">
    <h3>Make a post</h3>
  </div>
</div>
<div class="row d-flex justify-content-center">
  <div class="col-md-12">
    <div class="form-group">
      <input type="text" class="form-control mb-2" id="post-title" placeholder="Title">
      <textarea class="form-control" id="post-content" rows="2"></textarea>
      <button class="btn btn-primary mt-2" id="post-submit">Post</button>
    </div>
  </div>
</div>

{{#if has_posts}}
<div class="row d-flex justify-content-center mt-5">
  <div class="col-12">
    <h3>Previous posts</h3>
  </div>
</div>
<div class="row d-flex">
  {{#each posts as |post|}}
  <div class="col-md-4">
    <div class="card">
      <div class="card-body d-flex justify-content-between p-2">
        <h4 class="card-text p-0 m-0">{{post.title}}</h4>
        <div>
          <a href="/posts/{{post.id }}" class="btn btn-sm btn-outline-primary">View</a>
          <button class="btn btn-sm btn-outline-danger" value="{{post.id}}" onclick="deletePost(this)">Delete</button>
        </div>
      </div>
    </div>
  </div>
  {{/each}}
</div>
{{/if}}

<script src="/js/dashboard.js"></script>